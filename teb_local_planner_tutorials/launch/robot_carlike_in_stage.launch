    <!--  ************** Global Parameters ***************  -->
    <param name="/use_sim_time" value="true"/>

    <!--  ************** Stage Simulator ***************  -->
	<node pkg="stage_ros" type="stageros" name="stageros" args="$(find teb_local_planner_tutorials)/stage/maze_carlike.world">
		<remap from="base_scan" to="scan"/>
  	</node>

  	<include file="$(find base_controller)/launch/cmd_vel_mux.launch"/>
    <include file="$(find base_controller)/launch/laser_filter.launch"/>

